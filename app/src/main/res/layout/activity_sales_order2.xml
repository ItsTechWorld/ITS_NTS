<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hecosoft.com.its_nts.SalesOrder2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Sales Order"
        android:id="@+id/header2txt"
        android:textAppearance="?android:textAppearanceMedium"
        android:gravity="center"
        android:layout_marginTop="40px"
android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/monthyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Type:"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@id/header2txt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        />

    <Spinner
        android:id="@+id/spinersalestype"
        android:layout_width="150dp "
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/monthyear"
        android:layout_below="@id/header2txt"
android:background="@drawable/spinner_border"
        android:layout_marginLeft="10dp"
android:layout_marginBottom="10dp"
        >
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Date:"
        android:layout_below="@id/spinersalestype"
android:layout_marginTop="20dp"
        android:id="@+id/txt1"
        android:layout_marginLeft="70dp"

        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinersalestype"
        android:id="@+id/orderdate"
        android:layout_toRightOf="@id/txt1"
        android:editable="false"
android:textAlignment="center"
        android:layout_marginLeft="5dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showtime"
        android:text="show"
android:src="@drawable/cal1"
android:layout_below="@id/spinersalestype"
android:layout_toRightOf="@id/orderdate"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Date:"
        android:layout_below="@id/orderdate"
        android:layout_marginTop="20dp"
        android:id="@+id/txt2"
        android:layout_marginLeft="50dp"

        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderdate"
        android:id="@+id/reqiredate"
        android:layout_toRightOf="@id/txt2"
        android:editable="false"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"

        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showreqtime"
        android:text="show"
        android:src="@drawable/cal1"
        android:layout_below="@id/showtime"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/reqiredate"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes:"
        android:layout_marginLeft="86dp"
        android:layout_below="@+id/txt2"
        android:layout_marginTop="180px"
        android:id="@+id/notes"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/notes"
        android:layout_below="@id/reqiredate"
        android:layout_marginTop="70px"
        android:id="@+id/anotes"
        android:gravity="top|left"
        android:minLines="5"
        android:maxLines="5"
        android:inputType="textMultiLine"
        android:background="@drawable/edittext_border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical"

        />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Person:"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@id/anotes"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        />

    <Spinner
        android:id="@+id/spinersalesperson"
        android:layout_width="150dp "
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt3"
        android:layout_below="@id/anotes"
        android:background="@drawable/spinner_border"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        >
    </Spinner>
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice Term:"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@id/txt3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        />

    <Spinner
        android:id="@+id/spinerinvoice"
        android:layout_width="150dp "
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt4"
        android:layout_below="@id/spinersalesperson"
        android:background="@drawable/spinner_border"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >
    </Spinner>

</RelativeLayout>
